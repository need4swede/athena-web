# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=chromebook_library
DB_USER=postgres
DB_PASSWORD=password

# Server Configuration
PORT=36464
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:6464

# SSO Configuration - OAuth Providers
# Microsoft OAuth Configuration
SSO_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
SSO_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
SSO_MICROSOFT_TENANT_ID=organizations

# Google OAuth Configuration (if enabled)
SSO_GOOGLE_CLIENT_ID=your_google_client_id_here
SSO_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth Configuration (if enabled)
SSO_GITHUB_CLIENT_ID=your_github_client_id_here
SSO_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# LinkedIn OAuth Configuration (if enabled)
SSO_LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
SSO_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Twitter OAuth Configuration (if enabled)
SSO_TWITTER_CLIENT_ID=your_twitter_client_id_here
SSO_TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# Google Notes Configuration
# Set to false to disable posting notes to Google Admin Console during checkin/checkout
ENABLE_GOOGLE_NOTES=true

# Access Control Configuration
# Comma-separated list of allowed domains (leave empty to allow all domains)
SSO_ALLOWED_DOMAINS=example.com,yourdomain.org
# Comma-separated list of allowed emails (leave empty to allow all emails from allowed domains)
SSO_ALLOWED_EMAILS=admin@example.com,manager@example.com

# Reports Configuration
# Comma-separated list of org units to hide from reports
HIDE_ORG_FROM_REPORTS=/Students/Grade 1,/Staff/Admin

# Aeries API Configuration
AERIES_ENDPOINT=https://your-district.aeries.net/admin/api/v5
AERIES_API_KEY=your-aeries-api-key
